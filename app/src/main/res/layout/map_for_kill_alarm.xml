<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edbaba">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="527dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#303f9e"
        android:gravity="center"
        android:text="위치 찍기"
        android:textColor="#f7f4f4"
        android:textSize="23dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="59dp"
        android:text="위치 찍기 방법"
        android:textColor="#060300"
        android:textSize="34dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView12"
        android:text="위치찍기는  알람이 울릴때  미리 구굴맵에 지정한  위치와               현재 내위치가  맞으면  알람이 해제가 되는 방법입니다."
        android:textColor="#060300"
        android:textSize="13dp"
        tools:ignore="RtlCompat" />


    <RelativeLayout
        android:id="@+id/mapcontainer"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13">


    </RelativeLayout>


    <Button
        android:id="@+id/finish_to_select_map"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="선택 완료" />

    <TextView
        android:id="@+id/show_loaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"


       android:textColor="#000"
        android:textSize="18dp"
        tools:ignore="RtlCompat" />

</RelativeLayout>